@model IEnumerable<QLCafe.WEB.Models.Products.Products>

@{
    ViewData["Title"] = "ProductsSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tìm Kiếm Món</h1>


<form action="/" method="post">
    <div class="row input-group">
        <input type="text" name="stringSearch" class="form-control" placeholder="Tìm kiếm tên món..." />
        <div class="input-group-btn">
            <input class="btn btn-primary" type="submit" value="Tìm" asp-controller="BillDetail" asp-action="ProductsSearch" />
        </div>
    </div>
</form>
<br />
<table class="table table-hover table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @*@Html.ActionLink("Thêm", "BillDetailAdd","BillDetail", new { id = item.ID }) |*@
                    <a asp-controller="BillDetail" asp-action="BillDetailAdd" asp-route-id="@item.ID"><i class="far fa-calendar-plus"></i> Thêm</a>
                    @*@Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                </td>
            </tr>
        }
    </tbody>
</table>
