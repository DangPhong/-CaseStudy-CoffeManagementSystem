@model IEnumerable<QLCafe.WEB.Models.Products.Products>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh Sách Món</h1>

<p>
    <a asp-action="Create">Thêm Món Mới</a>
</p>
<form action="/" method="post">
    <div class="row input-group">
        <input type="text" name="stringSearch" class="form-control" placeholder="Tìm kiếm tên món..." />
        <div class="input-group-btn">
            <input class="btn btn-primary" type="submit" value="Tìm" asp-controller="Products" asp-action="Index" />
        </div>
    </div>
</form>
<br />

<table class="table table-hover table table-bordered">
    <thead class="thead-dark">
        <tr>

            <th hidden>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td hidden>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img height="100px" width="100px" src="data:image/png;base64,  @Html.DisplayFor(modelItem => item.Data)" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.ID"><i class="far fa-edit"></i></a>
                <a asp-controller="Products" asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-info-circle"></i></a>
                <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.ID" onclick="return confirm('Bạn có chắc muốn xóa món này không??')"><i class="far fa-trash-alt"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
