@model QLCafe.WEB.Models.Unit.UnitUpdate

@{
    ViewData["Title"] = "UnitUpdate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa Đơn Vị Tính</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UnitUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (TempData["Success"] != null)
            {
                <p class="alert alert-success">@TempData["Success"]</p>
            }
            <input hidden asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Unit" asp-action="UnitIndex">Back to List</a>
</div>

